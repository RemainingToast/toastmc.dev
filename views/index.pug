		.hidden.text-email
		.hidden.text-github
		.hidden.text-discord
		.hidden.text-youtube
		.hidden.text-twitch
		.hidden.text-twitter
		.hidden.text-steam
		.hidden.text-spotify
		.hidden.text-patreon
